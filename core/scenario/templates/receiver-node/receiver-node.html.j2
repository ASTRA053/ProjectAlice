{%- macro sentence_case(text) %}
    {{ text[0]|upper}}{{text[1:] }}
{% endmacro -%}
<script type="text/x-red" data-template-name="on{{ sentence_case(event_name) }}">
    <div class="form-row">
        <label for="node-input-broker"><i class="fa fa-globe"></i> <span data-i18n="mqtt-alice.label.broker"></span></label>
        <input type="text" id="node-input-broker">
    </div>
</script>

<script type="text/javascript">
    RED.nodes.registerType('on{{ sentence_case(event_name) }}',{
        category: 'ProjectAlice',
        defaults: {
			topic: {value: '{{ event_name }}'},
            qos: {value:2},
            broker: {type:"mqtt-alice-broker", required:true}
        },
        color:"#d8bfd8",
        inputs:0,
        outputs:1,
        icon: "bridge.svg",
        label: 'on{{ sentence_case(event_name) }}',
        labelStyle: "node_label_italic"
    });
</script>
